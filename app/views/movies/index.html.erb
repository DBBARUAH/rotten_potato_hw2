<h2>All Movies</h2>

<%#  Part 1: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      
      <th><%= :class => @movie_highlight}= link_to "Movie Title", movies_path(:sorting_mechanism => 'title'), :id => "title_header"%></th>
      <th>Rating</th>
      <th><%= :class => @date_highlight}= link_to "Release Date", movies_path(:sorting_mechanism => 'release_date'), :id => "release_date_header"%></th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>
